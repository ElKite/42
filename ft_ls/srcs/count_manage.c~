# include "ft_ls.h"

void	count_sizes(t_env *env, t_path *path)
{
	t_filew	*tmp;

	if (env->format_out == TRUE)
	{
		tmp = path->files;
		while (tmp != NULL)
		{
			ft_link_size(tmp->stat->st_nlink, path);
			ft_owner_size(tmp->stat->, path);
			tmp = tmp->next;
		}
	}
}
