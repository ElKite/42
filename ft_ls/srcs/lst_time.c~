# include "ft_ls.h"

void		ft_sort_time_path(t_path *lst)
{
	t_path	*tmp;

	tmp = lst->paths;
	while (tmp && tmp->next != NULL)
	{
		if (tmp->stat->st_mtime > tmp->next->stat->st_mtime)
		{
			ft_swap_path(tmp, tmp->next);
			tmp = lst->paths;
			continue ;
		}
		tmp = tmp->next;
	}
}

void		ft_sort_time_files(t_filew *files)
{
}
