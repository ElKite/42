# include "ft_ls.h"

void	add_files_and_dir(t_path *path, dirent *file)
{
	//chekc fichiers cachee et dir ..
	if (file->d_type == DT_DIR)
		ft_add_path(env, ft_strjoins(path->name, "/", file->d_name);
	ft_addfile(path, file);
}
			
			
